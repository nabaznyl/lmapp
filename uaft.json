{
  "project": "lmapp",
  "fix": {
    "commands": [
      ".venv/bin/black src/ tests/"
    ]
  },
  "lint": {
    "commands": [
      ".venv/bin/flake8 src/ tests/",
      ".venv/bin/black --check src/ tests/",
      ".venv/bin/mypy src/"
    ]
  },
  "cleanup": [
    "**/*.pyc",
    "**/__pycache__",
    "dist/",
    "build/",
    "*.egg-info",
    ".pytest_cache",
    ".coverage",
    "htmlcov",
    ".mypy_cache"
  ],
  "test": {
    "command": ".venv/bin/pytest",
    "args": [
      "-v"
    ]
  },
  "test:integration": {
    "description": "Phase 2C: End-to-end integration tests",
    "command": ".venv/bin/python",
    "args": [
      "tests/test_e2e_refactoring.py"
    ]
  },
  "test:performance": {
    "description": "Phase 2C: Performance benchmarks",
    "command": ".venv/bin/python",
    "args": [
      "tests/test_performance_benchmark.py"
    ]
  },
  "test:uat": {
    "description": "Phase 2C: User acceptance tests",
    "command": ".venv/bin/python",
    "args": [
      "tests/test_uat_scenarios.py"
    ]
  },
  "test:phase2c": {
    "description": "Phase 2C: All QA & integration tests (41 total)",
    "commands": [
      "uaft test:integration",
      "uaft test:performance",
      "uaft test:uat"
    ]
  },
  "test:phase5": {
    "description": "Phase 5: All advanced capabilities tests (83 total)",
    "command": ".venv/bin/pytest",
    "args": [
      "tests/test_plugins_unit.py",
      "tests/test_plugins_integration.py",
      "tests/test_rag_document_processor.py",
      "tests/test_rag_embedding.py",
      "tests/test_rag_hybrid_search.py",
      "tests/test_workflows_engine.py",
      "tests/test_workflows_safety.py",
      "-v"
    ]
  },
  "test:phase5d": {
    "description": "Phase 5D: Performance optimization tests (15 total)",
    "command": ".venv/bin/pytest",
    "args": [
      "tests/test_phase5d_performance.py",
      "-v"
    ]
  },
  "test:phase5b-vector": {
    "description": "Phase 5B: Vector store & citation tracking tests (17 total)",
    "command": ".venv/bin/pytest",
    "args": [
      "tests/test_vector_store.py",
      "-v"
    ]
  },
  "test:all-phases": {
    "description": "All project tests (Phase 2C + Phase 5A-5D)",
    "commands": [
      "uaft test:phase2c",
      "uaft test:phase5",
      "uaft test:phase5d",
      "uaft test:phase5b-vector"
    ]
  },
  "coverage": {
    "description": "Generate coverage reports",
    "commands": [
      "bash /home/anonmaly/scripts/uaft_coverage.sh . .venv"
    ]
  },
  "install": {
    "command": ".venv/bin/pip",
    "args": [
      "install",
      "-e",
      "."
    ]
  },
  "dev": {
    "command": ".venv/bin/pip",
    "args": [
      "install",
      "-e",
      ".[dev]"
    ]
  },
  "rebuild": {
    "commands": [
      "uaft cleanup",
      "uaft install"
    ]
  },
  "context-update": {
    "description": "Update copilot-instructions.md with latest project info",
    "commands": [
      "bash scripts/update-copilot-instructions"
    ]
  },
  "check": {
    "commands": [
      "uaft lint",
      "uaft test"
    ]
  },
  "all": {
    "commands": [
      "uaft cleanup",
      "uaft install",
      "uaft fix",
      "uaft test"
    ]
  },
  "review": {
    "description": "Run code review",
    "commands": [
