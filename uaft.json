{
  "project": "lmapp",
  "fix": {
    "commands": [
      ".venv/bin/black src/ tests/"
    ]
  },
  "lint": {
    "commands": [
      ".venv/bin/flake8 src/ tests/",
      ".venv/bin/black --check src/ tests/"
    ]
  },
  "cleanup": [
    "**/*.pyc",
    "**/__pycache__",
    "dist/",
    "build/",
    "*.egg-info",
    ".pytest_cache",
    ".coverage",
    "htmlcov"
  ],
  "test": {
    "command": ".venv/bin/pytest",
    "args": ["-v"]
  },
  "systematic": {
    "description": "Run systematic CLI tests",
    "commands": [
      ".venv/bin/python scripts/systematic_test.py"
    ]
  },
  "coverage": {
    "command": ".venv/bin/pytest",
    "args": ["--cov=lmapp", "tests/", "--cov-report=term-missing"]
  },
  "install": {
    "command": ".venv/bin/pip",
    "args": ["install", "-e", "."]
  },
  "dev": {
    "command": ".venv/bin/pip",
    "args": ["install", "-e", ".[dev]"]
  },
  "rebuild": {
    "commands": [
      "uaft cleanup",
      "uaft install"
    ]
  },
  "check": {
    "commands": [
      "uaft lint",
      "uaft test"
    ]
  },
  "all": {
    "commands": [
      "uaft cleanup",
      "uaft install",
      "uaft fix",
      "uaft test"
    ]
  }
}
