    "description": "Bump semantic version",
    "commands": [
      "bash /home/anonmaly/scripts/uaft_version.sh . patch VERSION"
    ]
  },
  "changelog": {
    "description": "Generate CHANGELOG from commits",
    "commands": [
      "bash /home/anonmaly/scripts/uaft_changelog.sh ."
    ]
  },
  "deps": {
    "description": "Audit dependencies",
    "commands": [
      "bash /home/anonmaly/scripts/uaft_deps.sh . .venv"
    ]
  },
  "watch": {
    "description": "Auto-run tests on file changes",
    "commands": [
      "bash /home/anonmaly/scripts/uaft_watch.sh src '*.py' '.venv/bin/pytest'"
    ]
  },
  "tag": {
    "description": "Create release tag",
    "commands": [
      "bash /home/anonmaly/scripts/uaft_tag.sh ."
    ]
  },
  "logs": {
    "description": "Manage logs",
    "commands": [
      "bash /home/anonmaly/scripts/uaft_logs.sh ."
    ]
  },
  "security-audit": {
    "description": "Comprehensive security scanning",
    "commands": [
      "bash /home/anonmaly/scripts/uaft_security_audit.sh ."
    ]
  },
  "scan-secrets": {
    "description": "Scan for exposed secrets in git history",
    "commands": [
      "bash /home/anonmaly/scripts/uaft_scan_secrets.sh ."
    ]
  },
  "install-security-hooks": {
    "description": "Install pre-commit/pre-push security hooks",
    "commands": [
      "bash /home/anonmaly/scripts/uaft_install_security_hooks.sh ."
    ]
  },
  "privacy-report": {
    "description": "Generate privacy and compliance report",
    "commands": [
      "bash /home/anonmaly/scripts/uaft_privacy_report.sh ."
    ]
  },
  "qa": {
    "description": "Quick quality assurance check",
    "commands": [
      ".venv/bin/pytest tests/test_vector_store.py tests/test_phase5d_performance.py -v --tb=short",
      ".venv/bin/python -c 'import lmapp; print(f\"\u2705 lmapp {lmapp.__version__}\")'",
      "git status --short | grep -E '(session_log|REPORT|PRIVACY)' && echo '\u26a0\ufe0f  Private files tracked' || echo '\u2705 Private files protected'"
    ]
  },
  "verify-all": {
    "description": "Comprehensive workspace verification",
    "commands": [
      "timeout 180 .venv/bin/pytest tests/ -v --tb=line",
      ".venv/bin/lmapp --version",
      "echo '\u2705 All tests passed and CLI functional'"
    ]
  }
}