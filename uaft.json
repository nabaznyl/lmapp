    "commands": [
      "bash /home/anonmaly/scripts/uaft_optimization.sh ."
    ]
  },
  "quality": {
    "description": "Run full quality checks",
    "commands": [
      "bash /home/anonmaly/scripts/uaft_code_review.sh .",
      "bash /home/anonmaly/scripts/uaft_code_analysis.sh .",
      "bash /home/anonmaly/scripts/uaft_release_check.sh ."
