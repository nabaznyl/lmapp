{
  "name": "lmapp-vscode",
  "displayName": "lmapp Copilot",
  "description": "Local AI Assistant for VS Code - Powered by lmapp",
  "version": "0.3.4",
  "publisher": "lmapp",
  "repository": {
    "type": "git",
    "url": "https://github.com/nabaznyl/lmapp"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Programming Languages",
    "Machine Learning"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "lmapp.startServer",
        "title": "lmapp: Start API Server"
      },
      {
        "command": "lmapp.stopServer",
        "title": "lmapp: Stop API Server"
      },
      {
        "command": "lmapp.refactorSelection",
        "title": "lmapp: Refactor Selection",
        "when": "editorHasSelection"
      },
      {
        "command": "lmapp.quickFixOnFile",
        "title": "lmapp: Quick Fix Current File"
      }
    ],
    "configuration": {
      "title": "lmapp",
      "properties": {
        "lmapp.serverUrl": {
          "type": "string",
          "default": "http://localhost:8000",
          "description": "URL of the lmapp API server"
        },
        "lmapp.model": {
          "type": "string",
          "default": "tinyllama",
          "description": "Model to use for completion"
        },
        "lmapp.enableInlineCompletion": {
          "type": "boolean",
          "default": true,
          "description": "Enable inline ghost-text completions"
        },
        "lmapp.contextLines": {
          "type": "number",
          "default": 50,
          "description": "Number of preceding lines to send as context"
        },
        "lmapp.debounceMs": {
          "type": "number",
          "default": 500,
          "minimum": 100,
          "maximum": 5000,
          "description": "Debounce interval for completion requests in milliseconds (100-5000)"
        },
        "lmapp.requestTimeout": {
          "type": "number",
          "default": 2000,
          "minimum": 1000,
          "maximum": 10000,
          "description": "Timeout for API requests in milliseconds (1000-10000)"
        },
        "lmapp.enableCompletionCache": {
          "type": "boolean",
          "default": true,
          "description": "Enable caching of completion results to reduce API calls"
        },
        "lmapp.enableCodeAnalysis": {
          "type": "boolean",
          "default": true,
          "description": "Enable real-time code analysis in completions"
        },
        "lmapp.analysisLanguage": {
          "type": "string",
          "default": "python",
          "enum": ["python", "javascript", "typescript", "java", "cpp", "generic"],
          "description": "Language for code analysis"
        },
        "lmapp.analyzeStrictMode": {
          "type": "boolean",
          "default": true,
          "description": "Enable strict mode for code analysis (more issues detected)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.85.0",
    "typescript": "^5.3.0",
    "vsce": "^2.15.0"
  },
  "dependencies": {
    "axios": "^1.6.0"
  }
}
