{
  "name": "lmapp-gui",
  "version": "0.4.0",
  "description": "Desktop GUI for lmapp - AI Everywhere for Everyone",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "bundle:backend": "node build-backend.js",
    "prebuild": "npm run bundle:backend",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux"
  },
  "homepage": "https://github.com/nabaznyl/lmapp",
  "repository": {
    "type": "git",
    "url": "https://github.com/nabaznyl/lmapp.git"
  },
  "keywords": [
    "ai",
    "llm",
    "chat",
    "local",
    "ollama"
  ],
  "author": {
    "name": "lmapp contributors",
    "email": "lmapp@example.com"
  },
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.0",
    "playwright": "^1.40.0"
  },
  "dependencies": {
    "axios": "^1.6.0"
  },
  "build": {
    "appId": "com.lmapp.desktop",
    "productName": "lmapp",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!renderer/node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "resources/backend",
        "to": "backend",
        "filter": ["**/*"]
      }
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": ["dmg", "zip"]
    },
    "win": {
      "target": ["nsis", "portable"]
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "category": "Utility",
      "maintainer": "lmapp contributors <lmapp@example.com>"
    }
  }
}
